<Window x:Class="HibernateMe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" 
        Height="350" 
        Width="525"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen"
        Topmost="True"
        WindowStyle="None"
        ResizeMode="NoResize" 
        AllowsTransparency="True"
        Background="Transparent"
        Icon="Zzz.ico">
    <Border Name="RoundedBorder" CornerRadius="5" BorderThickness="2" BorderBrush="Black" Background="White">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Label x:Name="CountDownLabel" FontSize="35" HorizontalAlignment="Center" VerticalAlignment="Center">3:00 avant hibernation</Label>
            <Button x:Name="DelayButton" Grid.Row="1" Margin="3" Padding="2" Click="DelayButton_Click" FontSize="20" IsEnabled="False">Snooze</Button>
        </Grid>
    </Border>
</Window>
